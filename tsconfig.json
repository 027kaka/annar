{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["es2015", "DOM"],
    "outDir": "./esm",
    "rootDir": "./components",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./components/*"]
    },
  },
  "include": [
    "components/**/*",
    "typings/**/*",
  ]
}
